<?xml version="1.0" encoding="utf-8"?>
<com.wordpress.zubeentolani.FloatingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/horizontal_scroll_row_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wordpress.zubeentolani.OverScroll_ScrollView
        android:id="@+id/horizontal_scroll_row_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/horizontal_scroll_row_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </LinearLayout>

    </com.wordpress.zubeentolani.OverScroll_ScrollView>

</com.wordpress.zubeentolani.FloatingView>